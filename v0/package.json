{
  "name": "ai-castle-game",
  "version": "0.1.0",
  "description": "Turn-based economy simulation game",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.mcp.json",
    "build:core": "tsc",
    "build:mcp": "tsc -p tsconfig.mcp.json",
    "start": "node dist/server.js",
    "cli": "node dist/cli.js",
    "mcp": "node dist-mcp/mcp-server.js",
    "mcp:http": "node dist-mcp/mcp-server-http.js",
    "dev:server": "ts-node src/server.ts",
    "dev:cli": "ts-node src/cli.ts",
    "dev:mcp": "tsx --tsconfig tsconfig.mcp.json src/mcp-server.ts",
    "dev:mcp:http": "tsx --tsconfig tsconfig.mcp.json src/mcp-server-http.ts"
  },
  "keywords": ["game", "simulation", "economy", "mcp"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0"
  }
}
